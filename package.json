{
  "name": "codenest",
  "type": "module",
  "version": "0.0.3",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "description": "跨平台开发项目管理工具",
  "author": "MidnightCrowing",
  "license": "MIT",
  "homepage": "https://github.com/MidnightCrowing/CodeNest",
  "repository": {
    "type": "git",
    "url": "https://github.com/MidnightCrowing/CodeNest.git"
  },
  "bugs": "https://github.com/MidnightCrowing/CodeNest/issues",
  "keywords": [
    "codenest",
    "cross-platform",
    "desktop-application",
    "project-management",
    "developer-tools"
  ],
  "release": "https://github.com/MidnightCrowing/CodeNest/releases",
  "readme": "https://github.com/MidnightCrowing/CodeNest/blob/main/README.md",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently --kill-others \"pnpm dev:vue\" \"pnpm dev:electron\"",
    "dev:vue": "vite",
    "dev:electron": "pnpm tsc:electron && node scripts/add-suffix-js.js && electron .",
    "build": "pnpm build:vue && pnpm build:electron",
    "build:vue": "vue-tsc --build && vite build",
    "build:electron": "pnpm tsc:electron && node scripts/add-suffix-js.js && electron-builder",
    "icon:build": "node scripts/build-icons.js",
    "tsc:electron": "tsc -p tsconfig/tsconfig.electron.json & tsc -p tsconfig/tsconfig.electron.preload.json",
    "ui:install": "pnpm --filter jetv-ui install --frozen-lockfile",
    "ui:build": "pnpm --filter jetv-ui build",
    "ui:update": "pnpm update jetv-ui",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "vue-tsc",
    "knip": "knip"
  },
  "dependencies": {
    "@vueuse/core": "^13.8.0",
    "fs-extra": "^11.3.1",
    "fuse.js": "^7.1.0",
    "jetv-ui": "file:jetv-ui",
    "linguist-js": "^2.9.2",
    "pinia": "^3.0.3",
    "trash": "^9.0.0",
    "vue": "^3.5.20",
    "vue-i18n": "^11.1.11"
  },
  "devDependencies": {
    "@antfu/eslint-config": "5.2.1",
    "@iconify/tools": "^4.1.2",
    "@intlify/unplugin-vue-i18n": "^6.0.8",
    "@rushstack/eslint-patch": "^1.12.0",
    "@tsconfig/node20": "^20.1.6",
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.0",
    "@unocss/preset-attributify": "^66.4.2",
    "@unocss/preset-mini": "^66.4.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^9.2.1",
    "electron": "37.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.34.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vue": "^10.4.0",
    "jsdom": "^26.1.0",
    "knip": "^5.63.0",
    "lint-staged": "^16.1.5",
    "release-it": "^19.0.4",
    "release-it-pnpm": "^4.6.6",
    "sass": "^1.91.0",
    "simple-git-hooks": "^2.13.1",
    "terser": "^5.43.1",
    "typescript": "~5.9.2",
    "unocss": "^66.4.2",
    "unplugin-auto-import": "^20.1.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.6"
  },
  "pnpm": {
    "overrides": {
      "@electron/node-gyp": "git+https://github.com/electron/node-gyp.git"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "electron",
      "electron-winstaller",
      "esbuild",
      "oxc-resolver",
      "simple-git-hooks"
    ]
  },
  "build": {
    "appId": "MidnightCrowing.CodeNest",
    "productName": "CodeNest",
    "copyright": "Copyright © year ${author}",
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "src/assets/app-icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "icon": "src/assets/app-icon.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "src/assets/app-icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "license": "LICENSE.txt"
    },
    "extraResources": [
      {
        "from": "./LICENSE.txt",
        "to": "../LICENSE.txt"
      }
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
