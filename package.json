{
  "name": "codenest",
  "type": "module",
  "version": "0.0.5",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "description": "跨平台开发项目管理工具",
  "author": "MidnightCrowing",
  "license": "MIT",
  "homepage": "https://github.com/MidnightCrowing/CodeNest",
  "repository": {
    "type": "git",
    "url": "https://github.com/MidnightCrowing/CodeNest.git"
  },
  "bugs": "https://github.com/MidnightCrowing/CodeNest/issues",
  "keywords": [
    "codenest",
    "cross-platform",
    "desktop-application",
    "project-management",
    "developer-tools"
  ],
  "release": "https://github.com/MidnightCrowing/CodeNest/releases",
  "readme": "https://github.com/MidnightCrowing/CodeNest/blob/main/README.md",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently --kill-others \"pnpm dev:vue\" \"pnpm dev:electron\"",
    "dev:vue": "vite",
    "dev:electron": "pnpm tsc:electron && node scripts/add-suffix-js.js && electron .",
    "build": "pnpm build:vue && pnpm build:electron",
    "build:vue": "vue-tsc --build && vite build",
    "build:electron": "pnpm tsc:electron && node scripts/add-suffix-js.js && electron-builder",
    "icon:build": "node scripts/build-icons.js",
    "tsc:electron": "tsc -p tsconfig/tsconfig.electron.json & tsc -p tsconfig/tsconfig.electron.preload.json",
    "ui:build": "pnpm --filter jetv-ui build",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "vue-tsc",
    "knip": "knip"
  },
  "dependencies": {
    "@vueuse/core": "^14.2.0",
    "better-sqlite3": "^12.6.2",
    "fast-xml-parser": "^5.3.4",
    "fs-extra": "^11.3.3",
    "fuse.js": "^7.1.0",
    "jetv-ui": "workspace:*",
    "linguist-js": "^2.9.2",
    "pinia": "^3.0.4",
    "trash": "^10.1.0",
    "vue": "^3.5.27",
    "vue-i18n": "^11.2.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "7.2.0",
    "@electron/rebuild": "^4.0.3",
    "@iconify/tools": "^5.0.3",
    "@intlify/unplugin-vue-i18n": "^11.0.3",
    "@rushstack/eslint-patch": "^1.15.0",
    "@tsconfig/node20": "^20.1.9",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.2.0",
    "@unocss/preset-attributify": "^66.6.0",
    "@unocss/preset-mini": "^66.6.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^9.2.1",
    "electron": "40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vue": "^10.7.0",
    "jsdom": "^28.0.0",
    "knip": "^5.83.0",
    "lint-staged": "^16.2.7",
    "release-it": "^19.2.4",
    "release-it-pnpm": "^4.6.6",
    "sass": "^1.97.3",
    "simple-git-hooks": "^2.13.1",
    "terser": "^5.46.0",
    "typescript": "~5.9.3",
    "unocss": "^66.6.0",
    "unplugin-auto-import": "^21.0.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.4"
  },
  "build": {
    "appId": "MidnightCrowing.CodeNest",
    "productName": "CodeNest",
    "copyright": "Copyright © year ${author}",
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "src/assets/app-icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "icon": "src/assets/app-icon.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "src/assets/app-icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "license": "LICENSE.txt"
    },
    "extraResources": [
      {
        "from": "./LICENSE.txt",
        "to": "../LICENSE.txt"
      }
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
